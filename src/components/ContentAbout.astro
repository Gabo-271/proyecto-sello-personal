        'Red Hat System Admin' // 
    ],
    frontend: [
        'HTML', // 
        'JavaScript', // 
        'Flutter', // 
        'Dart', // 
        'Figma' // 
    ],
    backend: [
        'Node.js', // 
        'C', // 
        'C++', // 
        'MySQL' // 
    ]
};

// Perfil de Gabriel Soto
const me: Developer = {
    name: 'Gabriel Soto', // 
    role: 'Ingeniero en Informática (En curso)', // 
    skills: [
        ...techStack.backend,
        ...techStack.devOps,
        ...techStack.frontend
    ],
    interests: [
        'Backend Architecture', // 
        'Agile Methodologies (Scrum)', // 
        'Cloud Computing', // [cite: 51]
        'Product Ownership', // [cite: 44]
        'Mobile Development' // [cite: 54]
    ]
};

// Función de contacto actualizada con tus datos reales
const contact = (type: ContactType): string => {
    switch (type) {
        case 'email':
            return 'andres27.2001@gmail.com'; //
        case 'university_email':
            return 'gsotome@utem.cl'; // 
        case 'phone':
            return '+56 9 6744 5474'; // 
        default:
            return 'Contact me via email.';
    }
};
`;
---

<Code
    code={code}
    lang="ts"
    wrap={true}
/>

<style is:global>
    /* Custom styling for code block line numbers */
    pre.astro-code {
        @apply bg-transparent !important;
    }

    pre.astro-code code {
        @apply block;
        counter-reset: step;
        counter-increment: step 0;
    }

    pre.astro-code code .line {
        @apply relative;
    }

    pre.astro-code code .line::before {
        @apply text-gray-600 pr-2;
        content: counter(step);
        counter-increment: step;
    }
</style>