---

interface Project {
    name: string;
    description: string;
    role?: string;
    link?: {
        url?: string;
        target?: string;
        title?: string;
        buttonLabel?: string;
    };
};

const projects: Project[] = [{
    name: 'Saludkine (2024)',
    description: 'Desarrollé la arquitectura backend con Node.js para una plataforma de gestión de citas médicas y presupuestos. Implementé la lógica crítica del sistema, integrando APIs REST y coordinando con el equipo de diseño para garantizar una experiencia fluida.',
    role: 'Backend Developer',
    link: {
        buttonLabel: 'Ver detalles'
    }
}, {
    name: 'Digital Link (2024)',
    description: 'Participé en el rediseño de la web corporativa, reestructurando la arquitectura backend para optimizar rendimiento. Coordiné con el equipo de desarrollo para garantizar una implementación robusta y escalable del sistema.',
    role: 'Backend Developer',
    link: {
        buttonLabel: 'Ver detalles'
    }
}, {
    name: 'Construtem (2025)',
    description: 'Lideré como Product Owner el desarrollo del módulo de inventario y despacho. Gestioné el backlog con Scrum, supervisé la integración técnica (REST, Docker, Figma) y logré entregar el MVP mejorando el flujo de trabajo en un 25%.',
    role: 'Product Owner / Scrum Master',
    link: {
        url: 'https://github.com/Construtem/frontend-inventario',
        buttonLabel: 'Ver repositorio'
    }
}];
---

<div>

    <!-- <h2 class="text-2xl font-bold text-white mb-4">Latest Projects</h2> -->

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

        {projects.map(project =>

            <div class="flex flex-col justify-center items-start border border-gray-700 rounded-lg p-4 bg-black">

                <h3 class="text-xl font-display font-semibold text-white mb-2">
                    {project.name}
                </h3>

                {
                    project.role && (
                        <p class="text-sm text-primary mb-2 font-medium">
                            {project.role}
                        </p>
                    )
                }

                <p class="text-gray-400">
                    {project.description}
                </p>

                {
                    project.link?.url ?
                        <a
                            href={project.link.url}
                            title={project.link.title || project.name}
                            target={project.link.target || '_blank'}
                            class="
                                w-full px-4 py-2.5 mt-4 text-center

                                border border-gray-600 rounded-lg

                                hover:text-primary
                                hover:border-primary
                            ">
                            {project.link.buttonLabel || 'Ver proyecto'}
                        </a>
                    : project.link?.buttonLabel ?
                        <span class="
                            w-full px-4 py-2.5 mt-4 text-center block

                            border border-gray-600 rounded-lg text-gray-400
                        ">
                            {project.link.buttonLabel}
                        </span>
                    : null
                }

            </div>

        )}

    </div>

</div>
